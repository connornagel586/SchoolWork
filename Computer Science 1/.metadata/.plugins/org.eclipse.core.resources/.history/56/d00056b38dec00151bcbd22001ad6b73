import java.util.Scanner;
import java.io.File;
import java.io.FileNotFoundException;

public class ParseAndRewrap {

	public static final int ERROR_CODE = 1;
	public static final int MAX_CHAR = 20;

	public static void main(String args[]) {
		Scanner scan = new Scanner(System.in);

		System.out.println("Enter a filename: ");
		String filename = scan.nextLine().trim();

		File file = new File(filename);
		String linewrap = "";
		try {
			Scanner fileScan = new Scanner(file);

			while (fileScan.hasNextLine()) {

				String line = fileScan.nextLine();

				Scanner lineScan = new Scanner(line);

				while (lineScan.hasNext()) {

					String token = lineScan.next();

					if (linewrap.length() + token.length() <= MAX_CHAR) {
						linewrap = linewrap + token + " ";

					} else {
						System.out.println(linewrap + token + " ");
						linewrap = "";
					}

				}

			}
		} catch (FileNotFoundException errorObject) {

			System.out.println("File \"" + filename + "\" could not be opened.");
			System.out.println(errorObject.getMessage());
			System.exit(ERROR_CODE);
		}

	}
}
